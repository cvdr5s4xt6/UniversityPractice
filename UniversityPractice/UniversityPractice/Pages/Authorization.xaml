<Page x:Class="UniversityPractice.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UniversityPractice.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="Green"
      Title="Authorization">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="PasswordAuth" Width="146" TextChanged="PasswordAuth_TextChanged"></TextBox>
            <TextBlock HorizontalAlignment="Center" FontWeight="Bold">Пароль</TextBlock>
            <Button Margin="0 0 0 6" Name="EnterBtn" Click="EnterBtn_Click" >Войти</Button>
            <Button Margin="0 0 0 0" Name="GuestBtn" Click="GuestBtn_Click"  >Гость</Button>
        </StackPanel>
    </Grid>
</Page>
