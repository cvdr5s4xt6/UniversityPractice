<Page x:Class="UniversityPractice.Pages.Department"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UniversityPractice.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="Green"
      Title="Department">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock>Факультет</TextBlock>
            <ComboBox Name="FacultyCb" Width="200" Text="{Binding Department.id_abbreviation}"  />

            <TextBlock>Название:</TextBlock>
            <TextBox Name="Nametb" Width="200"  />
            <Button Width="200" Content="Сохранить изменения" Name="SaveChangesButton"  />
        </StackPanel>
    </Grid>
</Page>
